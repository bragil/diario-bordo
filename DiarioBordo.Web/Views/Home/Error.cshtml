@model Exception
<div class="container" style="margin-top: 80px">
    <div class="row">
        <div class="jumbotron">
            <h1>Ooops...</h1>
            <p>Ocorreu um erro na aplicação</p>
            <div class="alert alert-danger">
                @Model.Message
            </div>
            <pre>@Model.StackTrace</pre>
            @if (Model.InnerException != null)
            {
                <p>Inner Exception</p>
                <div class="alert alert-danger">@Model.InnerException.Message</div>
                <pre>@Model.InnerException.StackTrace</pre>
            }
        </div>
    </div>
</div>